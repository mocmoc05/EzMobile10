<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Set màu nền-->
            <solid android:color="@color/colorBackground"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="0.2sp" android:color="@color/gray"></stroke>
            <!--  bán kính đường tròn ở 4 góc -->
            <corners android:radius="@dimen/_1sdp"></corners>
            <padding android:bottom="@dimen/_4sdp" android:left="@dimen/_4sdp" android:right="@dimen/_4sdp" android:top="@dimen/_4sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"></shape>
    </item>
</selector>