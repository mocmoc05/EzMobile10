<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:gravity="center|left">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="@string/stock_balance" />

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  " />

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:id="@+id/tv_value_stock_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/greenor"
                            android:text="" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/gray"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFontBold
                            android:id="@+id/tv_ma_ck"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/_18sdp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:id="@+id/tv_gia_tran"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textColor="@color/purple"
                                android:textSize="@dimen/_12sdp" />

                            <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                android:id="@+id/tv_gia_tham_chieu"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textSize="@dimen/_14sdp" />

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:id="@+id/tv_gia_san"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textColor="@color/blue_text"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="Buy"
                                android:textColor="@color/blue_text"
                                android:textSize="@dimen/_12sdp" />

                            <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                android:id="@+id/tv_gia_mua_tot_nhat"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textSize="@dimen/_14sdp" />

                            <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                android:id="@+id/tv_khoi_luong_mua"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="Sell"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_12sdp" />

                            <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                android:id="@+id/tv_gia_ban_tot_nhat"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textSize="@dimen/_14sdp" />

                            <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                android:id="@+id/tv_khoi_luong_ban"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text=""
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/symbol"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/gray">

                        </View>

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:id="@+id/tv_value_ma_ck"
                            android:layout_width="0dp"
                            android:text=""
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/gray"
                        android:layout_height="@dimen/_1sdp">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/exchange"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/gray">

                        </View>

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:id="@+id/tv_value_san_gd"
                            android:layout_width="0dp"
                            android:text=""
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/gray"
                        android:layout_height="@dimen/_1sdp">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/quantity"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/gray">

                        </View>

                        <com.trang.ez_mobile.util.custormView.EditTextFont
                            android:id="@+id/tv_value_so_luong"
                            android:layout_width="0dp"
                            android:text=""
                            android:background="@null"
                            android:inputType="number"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/gray"
                        android:layout_height="@dimen/_1sdp">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/order_type"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/gray">

                        </View>

                        <com.trang.ez_mobile.util.custormView.SpinnerFont
                            android:id="@+id/spn_value_loai_lenh"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:value="LO"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/gray"
                        android:layout_height="@dimen/_1sdp">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/price"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/gray">

                        </View>

                        <com.trang.ez_mobile.util.custormView.EditTextFont
                            android:id="@+id/tv_value_gia_mua"
                            android:layout_width="0dp"
                            android:text=""
                            android:background="@null"
                            android:inputType="number"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/gray"
                        android:layout_height="@dimen/_1sdp">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="horizontal">

                        <com.trang.ez_mobile.util.custormView.TextViewFont
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/password"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/gray">

                        </View>

                        <com.trang.ez_mobile.util.custormView.EditTextFont
                            android:id="@+id/tv_value_mat_khau"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:text=""
                            android:background="@null"
                            android:inputType="textPassword"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.trang.ez_mobile.util.custormView.ButtonFont
                android:id="@+id/btn_xac_nhan_mua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/custom_button_red"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_16sdp"
                android:text="@string/confirm_sell" />

        </LinearLayout>
    </ScrollView>
</layout>