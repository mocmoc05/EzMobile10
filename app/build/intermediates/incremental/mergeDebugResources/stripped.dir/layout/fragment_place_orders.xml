<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_place_orders_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.trang.ez_mobile.util.custormView.TabLayoutFont
                android:id="@+id/tabs_place_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/green"
                app:tabSelectedTextColor="@color/green"
                app:tabTextAppearance="@style/MineCustomTabText">

            </com.trang.ez_mobile.util.custormView.TabLayoutFont>


            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_place_orders"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tintuc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>
         