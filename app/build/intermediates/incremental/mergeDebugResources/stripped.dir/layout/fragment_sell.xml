<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/fragment_sell_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:gravity="center|left">

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="@string/available_cash" />

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  " />

                            <com.trang.ez_mobile.util.custormView.TextViewFont
                                android:id="@+id/tv_available_cash"
                                android:layout_width="wrap_content"
                                android:textColor="@color/greenor"
                                android:layout_height="wrap_content"
                                android:text="" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/gray"></View>

                        <LinearLayout
                            android:visibility="invisible"
                            android:id="@+id/ll_tt_ck"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                android:id="@+id/tv_ma_ck"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text=""
                                android:textSize="@dimen/_18sdp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"
                                android:orientation="vertical">

                                <com.trang.ez_mobile.util.custormView.TextViewFont
                                    android:id="@+id/tv_gia_tran"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text=""
                                    android:textColor="@color/purple"
                                    android:textSize="@dimen/_12sdp" />

                                <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                    android:id="@+id/tv_gia_tham_chieu"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text=""
                                    android:textSize="@dimen/_14sdp" />

                                <com.trang.ez_mobile.util.custormView.TextViewFont
                                    android:id="@+id/tv_gia_san"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text=""
                                    android:textColor="@color/blue_text"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.25"
                                android:orientation="vertical">

                                <com.trang.ez_mobile.util.custormView.TextViewFont
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text="@string/buy"
                                    android:textColor="@color/blue_text"
                                    android:textSize="@dimen/_12sdp" />

                                <com.trang.ez_mobile.util.custormView.TextViewFontBold
                                    android:id="@+id/gia_mua_max"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
