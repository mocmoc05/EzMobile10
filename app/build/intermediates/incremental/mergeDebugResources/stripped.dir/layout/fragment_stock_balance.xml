<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/fragment_stock_balance_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/_8sdp"
                android:background="@color/Grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:orientation="horizontal">

                <com.trang.ez_mobile.util.custormView.TextViewFont
                    android:text="@string/symbol"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent" />

                <com.trang.ez_mobile.util.custormView.TextViewFont
                    android:text="@string/total"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <com.trang.ez_mobile.util.custormView.TextViewFont
                    android:layout_width="0dp"
                    android:text="@string/waiting"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <com.trang.ez_mobile.util.custormView.TextViewFont
                    android:text="@string/current"
                    android:gravity="center|right"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:padding="@dimen/_8sdp"
                android:id="@+id/rcv_baocaotaisan_ck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_progress_fragment_stock_balance"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
         